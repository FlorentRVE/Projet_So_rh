{% extends 'base.html.twig' %}

{% block title %}Question RH{% endblock %}

{% block body %}

    <content>
        <div class="bg-sky-200 min-h-screen">

            <div class="flex flex-col p-4 justify-center items-center bg-slate-50">

                <h1 class="text-3xl font-semibold text-center">Question RH</h1>

            </div>

            <div class="flex flex-col p-4 mt-4 justify-center items-center gap-4">

                <table class="w-[90%] lg:w-[60%] lg:text-xl">
                
                    <tr class="border-2 border-slate-900">

                        <th scope="row" class="border-2 border-slate-900 bg-slate-900 text-slate-50 text-center font-semibold p-3">Service</th>
                        <td class="border-2 border-slate-900 bg-slate-50 text-center font-semibold">{{ demande.service }}</td>
                    </tr>

                    {{ include('component/_demande_show_email_tel.html.twig')}}

                    <tr class="border-2 border-slate-900">

                        <th scope="row" class="border-2 border-slate-900 bg-slate-900 text-slate-50 text-center font-semibold p-3">Question pour</th>
                        <td class="border-2 border-slate-900 bg-slate-50 text-center font-semibold">{{ demande.questionPour }}</td>
                    </tr>

                    <tr class="border-2 border-slate-900">

                        <th scope="row" class="border-2 border-slate-900 bg-slate-900 text-slate-50 text-center font-semibold p-3">Question</th>
                        <td class="border-2 border-slate-900 bg-slate-50 text-center font-semibold">{{ demande.question }}</td>
                    </tr>

                    <tr class="border-2 border-slate-900">

                        <th scope="row" class="border-2 border-slate-900 bg-slate-900 text-slate-50 text-center font-semibold p-3">Fait le</th>
                        <td class="border-2 border-slate-900 bg-slate-50 text-center font-semibold">{{ demande.faitLe.format('d/m/Y') }}</td>
                    </tr>

                </table>

                <div class="flex flex-col gap-3 justify-center items-center lg:flex-row w-[90%] md:w-1/2 lg:w-[30vw]">

                    {% if is_granted('ROLE_ADMIN') %}
                        {% set userID = app.request.query.get('userID') %}
                        <a href="{{ path('app_admin_historique', {'id': userID}) }}"  class="w-full bg-sky-800 text-slate-50 rounded-2xl text-center px-5 py-3 hover:brightness-125 shadow-lg font-semibold">Retour à la liste</a>
                    {% else %}
                        <a href="{{ path('app_accueil_historique') }}"  class="w-full bg-sky-800 text-slate-50 rounded-2xl text-center px-5 py-3 hover:brightness-125 shadow-lg font-semibold">Retour à la liste</a>
                    {% endif %}
                                       
                </div>             
            </div>
        </div>
    </content>
{% endblock %}
