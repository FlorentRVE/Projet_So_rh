{% extends 'base.html.twig' %}

{% block title %}Données reçues{% endblock %}

{% block body %}

  <div>
    
    <h1 style="border-bottom-style: solid; border-color: black; border-width: 2px; padding: 10px; text-align: center;">{{ formTitle }}</h1>

    <div>
      
      <p><span style="color:MidnightBlue; margin-right: 5px; font-weight: bold; text-decoration: underline;">Nom/Prénom:</span><span> {{ user }}</span></p>
      <p><span style="color:MidnightBlue; margin-right: 5px; font-weight: bold; text-decoration: underline;">Service:</span><span> {{ formData.service }}</span></p>
      <p><span style="color:MidnightBlue; margin-right: 5px; font-weight: bold; text-decoration: underline;">Fonction:</span><span> {{ formData.fonction }}</span></p>

      <p style="color:MidnightBlue; font-weight: bold; text-decoration: underline;" >Nouvelle adresse:</p>
      <div>
        <p>{{ formData.numero }} {{ formData.position }} {{ formData.voie }}</p>
        <p>{{ formData.commune.codePostal }} {{ formData.commune }}</p>
      </div>

      <p><span style="color:MidnightBlue; margin-right: 5px; font-weight: bold; text-decoration: underline;">Fait à:</span><span> {{ formData.faitA }}</span></p>     
      <p><span style="color:MidnightBlue; margin-right: 5px; font-weight: bold; text-decoration: underline;">le:</span><span> {{ formData.faitLe.format('d/m/Y') }}</span></p>   
    </div>

    <img src="{{ email.image('@images/signature.png') }}" alt="Logo" style="height: 25px; width: 50px;">

  </div>

{% endblock %}