
<div class="flex flex-col p-4 mt-4 justify-center items-center">

    <h1 class="text-xl font-semibold text-red-600">{{title}}</h1>

    <table class="mt-4">
        <tbody>
            <tr class="border-2 border-slate-900">
                <th class="border-2 border-slate-900 bg-slate-900 text-slate-50 text-center font-semibold">Date</th>
                <th class="border-2 border-slate-900 w-[10%] bg-slate-900 text-slate-50 font-semibold">Actions</th>
            </tr>

            {% for demande in demandes %}
                <tr class="border-2 border-slate-900">
                    <td class="border-2 border-slate-900 bg-slate-50 text-center font-semibold max-w-[10%]">{{ demande.faitLe.format('d/m/Y') }}</td>

                    <td class="bg-slate-900 text-center p-3 ">

                        <a href="{{ path(pathId, {'id': demande.id}) }}" class="btn bg-sky-600 rounded-2xl text-center px-4 py-2 hover:brightness-125 shadow-lg font-semibold text-slate-100">Voir</a>
                    </td>
                </tr>
            {% else %}
                <tr class="border-2 border-slate-900 bg-slate-50 text-xl text-center">
                    <td colspan="2">Aucune demande pour le moment ...</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>                
</div>