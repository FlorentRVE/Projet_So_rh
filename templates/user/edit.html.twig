{% extends 'base.html.twig' %}

{% block title %}Modifier l'utilisateur{% endblock %}

{% block body %}
    <div class="bg-sky-200 min-h-screen">

        <div class="flex flex-col p-4 justify-center items-center bg-slate-50">

            <h1 class="text-3xl font-semibold text-center">Modifier utilisateur</h1>

        </div>

        {# ======== Formulaire de modification ========= #}
        {{ include('user/_form.html.twig', {'button_label': "Modifier l'utilisateur"}) }}

        {# ========= Boutons d'actions ======== #}
        <div class="flex flex-col w-4/5 mx-auto gap-3 md:flex-row md:justify-between">

            <a href="{{ path('app_user_index') }}"  class="w-full bg-sky-800 text-slate-50 rounded-2xl text-center px-5 py-3 hover:brightness-125 shadow-lg font-semibold md:w-1/3">Retour Ã  la liste</a>

            <form method="post" action="{{ path('app_user_delete', {'id': user.id}) }}" onsubmit="return confirm('Voulez vous vraiment supprimer cet utilisateur ?');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                <button class="btn bg-red-600 rounded-2xl text-center px-5 py-3 hover:brightness-125 shadow-lg font-semibold text-slate-100 w-full">Supprimer</button>
            </form>

        </div>

    </div>
{% endblock %}