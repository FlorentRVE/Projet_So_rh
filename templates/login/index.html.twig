{# templates/login/index.html.twig #}
{% extends 'base.html.twig' %}

{# ... #}

{% block body %}

    <div class="flex flex-col bg-sky-500">

        <div class="flex justify-center items-center h-[30vh]">
            <img src="{{ asset('img/logo.png') }}" alt="logo" class="w-2/3 sm:w-[40%] lg:w-[20%]">
        </div>

        <form action="{{ path('app_login') }}" method="post" class="bg-slate-50 rounded-t-[70px] flex flex-col gap-6 h-[70vh] sm:w-[80%] sm:mx-auto sm:rounded-t-[50px]">

            <h1 class="text-4xl text-slate-800 font-bold my-6 text-center">Connexion</h1>

            <div class="flex flex-col w-[90%] mx-auto gap-2">
                <label for="username" class="text-slate-600 font-bold">Utilisateur:</label>
                <input type="text" id="username" name="_username" value="{{ last_username }}" class="rounded-lg bg-slate-200 h-10 p-2">
            </div>

            <div class="flex flex-col w-[90%] mx-auto gap-2">
                <label for="password" class="text-slate-600 font-bold">Mot de passe:</label>
                <input type="password" id="password" name="_password" class="rounded-lg bg-slate-200 h-10 p-2">
            </div>

            {# ========= Redirection apr√®s login ========= #}
            {# <input type="hidden" name="_target_path" value="/question"> #}

            <button type="submit" class="btn bg-sky-500 rounded-xl text-center hover:brightness-125 shadow-lg font-bold w-[70%] mx-auto text-slate-50 h-12 mt-16">Se connecter</button>
        </form>

    {% if error %}
        <div class="text-center">
            <p class="text-xl">{{ errorMsg }}</p>
            <p>{{ error.messageKey|trans(error.messageData, 'security') }}</p>
        </div>
    {% endif %}
    </div>

{% endblock %}