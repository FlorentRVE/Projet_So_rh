
{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

    {% for message in app.flashes('danger') %}
        {% if message %}

            <div class="alert bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
                <ul class="p-2">
                    {% for error in message %}
                        <li class="list-disc">{{ error }}</li>
                    {% endfor %}    
                </ul>
                <span class="close absolute top-0 bottom-0 right-0 px-4 py-3">
                    <svg class="fill-current h-6 w-6 text-red-500" role="button" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><title>Close</title><path d="M14.348 14.849a1.2 1.2 0 0 1-1.697 0L10 11.819l-2.651 3.029a1.2 1.2 0 1 1-1.697-1.697l2.758-3.15-2.759-3.152a1.2 1.2 0 1 1 1.697-1.697L10 8.183l2.651-3.031a1.2 1.2 0 1 1 1.697 1.697l-2.758 3.152 2.758 3.15a1.2 1.2 0 0 1 0 1.698z"/></svg>
                </span>
            </div>

        {% endif %}
    {% endfor %}
    
    <div class="bg-sky-200 min-h-screen">

        <div class="flex flex-col p-4 justify-center items-center bg-slate-50">

            <h1 class="text-3xl font-semibold text-center">Créer un nouvel utilisateur</h1>

        </div>

        <div class="bg-slate-800 p-7 mx-auto my-6 rounded-xl w-4/5 shadow-xl">


            <div class="w-11/12 mx-auto flex flex-col">
                
                {{ form_start(registrationForm) }}
                    <div class="mb-8 flex flex-col">
                        {{ form_label(registrationForm.username, 'Identifiant', {'label_attr': {'class': 'text-slate-100 uppercase font-semibold mb-2'}}) }}
                        {{ form_widget(registrationForm.username, {'attr': {'class': 'p-2 rounded-lg'}}) }}
                    </div>

                    <div class="mb-8 flex flex-col">
                        {{ form_label(registrationForm.plainPassword, 'Mot de passe', {'label_attr': {'class': 'text-slate-100 uppercase font-semibold mb-2'}}) }}
                        {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'p-2 rounded-lg'}}) }}
                    </div>
                    
                    <div class="mb-8 flex flex-col">
                        {{ form_label(registrationForm.roles, 'Roles', {'label_attr': {'class': 'text-slate-100 uppercase font-semibold mb-2'}}) }}
                        {{ form_widget(registrationForm.roles, {'attr': {'class': 'text-slate-100 flex gap-2'}}) }}
                    </div>

                    {{ form_errors(registrationForm, {'class': 'text-red-600 uppercase font-semibold mb-2'}) }}

                    <div class="flex flex-col">

                        <button type="submit" class="w-full btn bg-green-500 rounded-2xl text-center hover:brightness-125 shadow-lg font-bold px-7 py-3 text-lg md:w-1/3 md:self-end">Créer l'utilisateur</button>
                    </div>

                {{ form_end(registrationForm) }}
            </div>
        </div>

        <div class="flex flex-col w-4/5 mx-auto">

            <a href="{{ path('app_user_index') }}"  class="w-full bg-sky-800 text-slate-50 rounded-2xl text-center px-5 py-3 hover:brightness-125 shadow-lg font-semibold md:w-1/3">Retour à la liste</a>
        </div>

    </div>
{% endblock %}