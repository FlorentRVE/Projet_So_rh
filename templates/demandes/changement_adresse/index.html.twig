{% extends 'base.html.twig' %}

{% block title %}Changement d'adresse{% endblock %}

{% block body %}

    {{ include('component/_flash_error.html.twig') }}

    <div class="flex flex-col bg-sky-200 font-semibold min-h-screen">

        <div class="flex flex-col p-4 justify-center items-center bg-sky-500 gap-6">

            <p class="text-white text-4xl text-center">Changement d'adresse</p>
            <div class="w-[10%] mx-auto h-[4px] bg-slate-50 rounded-xl"></div>

        </div>

        <div class="bg-slate-800 p-7 mx-auto my-6 rounded-xl w-[90%] shadow-xl md:w-[70%] lg:w-[50%]">

            {{ form_start(form) }}
                <div class="w-11/12 mx-auto flex flex-col">

                    <div class="mb-8 flex flex-col">
                        {{ form_label(form.service, 'Mon service', {'label_attr': {'class': 'text-slate-100 uppercase font-semibold mb-2'}}) }}
                        {{ form_widget(form.service, {'attr': {'class': 'p-2 rounded-lg'}}) }}
                    </div>

                    <div class="mb-8 flex flex-col">
                        {{ form_label(form.fonction, 'Ma fonction', {'label_attr': {'class': 'text-slate-100 uppercase font-semibold mb-2'}}) }}
                        {{ form_widget(form.fonction, {'attr': {'class': 'p-2 rounded-lg'}}) }}
                    </div>

                    <div class="flex flex-col border-2 border-sky-500 p-2 rounded-lg mb-8">
                        <p class="text-slate-100 uppercase font-bold mb-2 text-center">Nouvelle Adresse</p>

                        <div class="flex gap-4">

                            <div class="mb-8 flex flex-col w-1/2">
                                {{ form_label(form.numero, 'N°', {'label_attr': {'class': 'text-slate-100 uppercase font-semibold mb-2'}}) }}
                                {{ form_widget(form.numero, {'attr': {'class': 'p-2 rounded-lg'}}) }}
                            </div>

                            <div class="mb-8 flex flex-col w-1/2">
                                {{ form_label(form.position, 'Position', {'label_attr': {'class': 'text-slate-100 uppercase font-semibold mb-2'}}) }}
                                {{ form_widget(form.position, {'attr': {'class': 'p-2 rounded-lg'}}) }}
                            </div>
                        </div>

                        <div class="mb-8 flex flex-col">
                            {{ form_label(form.voie, 'Voie', {'label_attr': {'class': 'text-slate-100 uppercase font-semibold mb-2'}}) }}
                            {{ form_widget(form.voie, {'attr': {'class': 'p-2 rounded-lg'}}) }}
                        </div>


                        <div class="mb-8 flex flex-col">
                            {{ form_label(form.commune, 'Commune', {'label_attr': {'class': 'text-slate-100 uppercase font-semibold mb-2'}}) }}
                            {{ form_widget(form.commune, {'attr': {'class': 'p-2 rounded-lg'}}) }}
                        </div>

                    </div>

                    <div class="mb-8 flex gap-4">

                        <div class="flex flex-col w-1/2">
                            {{ form_label(form.faitA, 'Fait à', {'label_attr': {'class': 'text-slate-100 uppercase font-semibold mb-2'}}) }}
                            {{ form_widget(form.faitA, {'attr': {'class': 'p-2 rounded-lg'}}) }}
                        </div>

                        <div class="flex flex-col w-1/2">
                            {{ form_label(form.faitLe, 'Le', {'label_attr': {'class': 'text-slate-100 uppercase font-semibold mb-2'}}) }}
                            {{ form_widget(form.faitLe, {'attr': {'class': 'p-2 rounded-lg'}}) }}
                        </div>
                    
                    </div>

                    <button class="bg-sky-500 text-white p-2 rounded-lg mt-10 font-semibold text-lg">{{ button_label|default('Envoyer') }}</button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>

    <div class="flex flex-col bg-sky-200 font-semibold text-2xl">

        <a href="{{ path('app_accueil_form') }}" class="bg-sky-500 text-white p-2 rounded-lg my-2 text-center w-[90%] mx-auto lg:w-[70%] xl:w-[50%]">Retour</a>

    </div>


{% endblock %}
