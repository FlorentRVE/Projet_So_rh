{% extends 'base.html.twig' %}

{% block title %}Changement d'adresse{% endblock %}

{% block body %}

    {{ include('component/_sidebar.html.twig') }}

    {# ==================== Content ======================= #}
    <content>
        <div class="ml-[20vw] bg-sky-200 min-h-screen">

            <div class="flex flex-col p-4 justify-center items-center bg-slate-50">

                <h1 class="text-3xl font-semibold text-center">Changement d'adresse</h1>

            </div>

            <div class="flex flex-col p-4 mt-4 justify-center items-center gap-4">

                <table class="w-[90%] lg:w-[60%] lg:text-xl">

                    <tr class="border-2 border-slate-900">

                        <th scope="row" class="border-2 border-slate-900 bg-slate-900 text-slate-50 text-center font-semibold p-3">Service</th>
                        <td class="border-2 border-slate-900 bg-slate-50 text-center font-semibold">{{ demande.service }}</td>
                    </tr>

                    <tr class="border-2 border-slate-900">

                        <th scope="row" class="border-2 border-slate-900 bg-slate-900 text-slate-50 text-center font-semibold p-3">Fonction</th>
                        <td class="border-2 border-slate-900 bg-slate-50 text-center font-semibold">{{ demande.fonction }}</td>
                    </tr>

                    <tr class="border-2 border-slate-900">

                        <th scope="row" class="border-2 border-slate-900 bg-slate-900 text-slate-50 text-center font-semibold p-3">Numéro</th>
                        <td class="border-2 border-slate-900 bg-slate-300 text-center font-semibold">{{ demande.numero }}</td>
                    </tr>

                    <tr class="border-2 border-slate-900">

                        <th scope="row" class="border-2 border-slate-900 bg-slate-900 text-slate-50 text-center font-semibold p-3">Position</th>
                        <td class="border-2 border-slate-900 bg-slate-300 text-center font-semibold">{{ demande.position }}</td>
                    </tr>

                    <tr class="border-2 border-slate-900">

                        <th scope="row" class="border-2 border-slate-900 bg-slate-900 text-slate-50 text-center font-semibold p-3">Voie</th>
                        <td class="border-2 border-slate-900 bg-slate-300 text-center font-semibold">{{ demande.voie }}</td>
                    </tr>

                    <tr class="border-2 border-slate-900">

                        <th scope="row" class="border-2 border-slate-900 bg-slate-900 text-slate-50 text-center font-semibold p-3">Commune</th>
                        <td class="border-2 border-slate-900 bg-slate-300 text-center font-semibold">{{ demande.commune }} ( {{ demande.commune.codePostal }} )</td>
                    </tr>

                    <tr class="border-2 border-slate-900">

                        <th scope="row" class="border-2 border-slate-900 bg-slate-900 text-slate-50 text-center font-semibold p-3">Fait à</th>
                        <td class="border-2 border-slate-900 bg-slate-50 text-center font-semibold">{{ demande.faitA }}</td>
                    </tr>

                    <tr class="border-2 border-slate-900">

                        <th scope="row" class="border-2 border-slate-900 bg-slate-900 text-slate-50 text-center font-semibold p-3">Fait le</th>
                        <td class="border-2 border-slate-900 bg-slate-50 text-center font-semibold">{{ demande.faitLe.format('d/m/Y') }}</td>
                    </tr>

                </table>

                <div class="flex flex-col gap-3 justify-center items-center lg:flex-row w-[90%] md:w-1/2 lg:w-[30vw]">

                    <a href="{{ path('app_changement_adresse_index') }}"  class="w-full bg-sky-800 text-slate-50 rounded-2xl text-center px-5 py-3 hover:brightness-125 shadow-lg font-semibold">Retour à la liste</a>
                    
                    <form method="post" action="{{ path('app_changement_adresse_delete', {'id': demande.id}) }}" onsubmit="return confirm('Voulez vous vraiment supprimer cette entrée ?');" class="w-full">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ demande.id) }}">
                        <button class="btn bg-red-600 rounded-2xl text-center px-5 py-3 hover:brightness-125 shadow-lg font-semibold text-slate-100 w-full">Supprimer</button>
                    </form>                    
                </div>   

             
            </div>
        </div>
    </content>
{% endblock %}
