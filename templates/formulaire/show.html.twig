        <p class="text-white text-4xl ">{{ formulaire.label }}</p>
        <div class="w-[10%] mx-auto h-[4px] bg-slate-50 rounded-xl"></div>

    </div>

    <div class="bg-sky-950 rounded-lg w-[90%] mx-auto p-4 text-2xl my-10 flex-1 flex flex-col justify-between">

        <form class="flex flex-col gap-4" method="post">

            {% for champ in champs %}
                <div>{{ champ.code | raw }}</div>
            {% endfor %}

        </form>

        <button type="submit" class="bg-sky-500 text-white p-2 rounded-lg mt-10">Envoyer</button>

    </div>

</div>

