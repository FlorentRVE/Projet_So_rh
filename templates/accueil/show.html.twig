{% extends 'base.html.twig' %}

{% block title %}Formulaire{% endblock %}

{% block body %}

<div class="flex flex-col bg-sky-200 font-semibold min-h-screen">

    <div class="flex flex-col p-4 justify-center items-center bg-sky-500 gap-6">

        <p class="text-white text-4xl ">{{ formulaire.label }}</p>
        <div class="w-[10%] mx-auto h-[4px] bg-slate-50 rounded-xl"></div>

    </div>

    <div class="bg-sky-950 rounded-lg w-[90%] mx-auto p-4 text-2xl my-10 flex-1 flex flex-col justify-between lg:w-[70%] xl:w-[50%]">

        <form class="flex flex-col gap-4" method="post">

            {% for champ in champs %}
                <div>{{ champ.code | raw }}</div>
            {% endfor %}

        </form>

        <button type="submit" class="bg-sky-500 text-white p-2 rounded-lg mt-10 md:w-[40%] md:self-end">Envoyer</button>

    </div>

</div>

<div class="flex flex-col bg-sky-200 font-semibold text-2xl">

    <a href="{{ path('app_accueil_form') }}" class="bg-sky-500 text-white p-2 rounded-lg my-2 text-center w-[90%] mx-auto lg:w-[70%] xl:w-[50%]">Retour</a>

</div>
{% endblock %}
